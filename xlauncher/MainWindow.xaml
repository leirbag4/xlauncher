<Window x:Class="xlauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="xlauncher" 
        SizeToContent="Height"
        Width="700"
        MaxHeight="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize">

    <Border Background="#991E1E1E" 
            CornerRadius="10"
            BorderBrush="#8A2BE2" 
            BorderThickness="2">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="InputBox"
                     Grid.Row="0"
                     FontSize="18" 
                     FontWeight="Normal"
                     Foreground="#BDA1EE" 
                     Background="#55252526"
                     BorderThickness="0"
                     Padding="10"
                     CaretBrush="White"
                     VerticalContentAlignment="Center"
                     TextChanged="InputBox_TextChanged"
                     PreviewKeyDown="InputBox_PreviewKeyDown">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <ListBox x:Name="ResultList"
                     Grid.Row="1"
                     Margin="0,10,0,0"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     PreviewKeyDown="ResultList_PreviewKeyDown"
                     MaxHeight="400">

                <ListBox.Style>
                    <Style TargetType="ListBox">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Style>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="📁" 
                                       Foreground="Gray" 
                                       FontSize="16" 
                                       Margin="0,0,10,0" 
                                       VerticalAlignment="Center"/>

                            <TextBlock Text="{Binding Name}" 
                                       Foreground="{Binding ColorBrush}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Border" 
                                            Padding="8" 
                                            CornerRadius="5" 
                                            Background="Transparent">

                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <ContextMenu.Template>
                                                    <ControlTemplate TargetType="ContextMenu">
                                                        <Border Background="#CC252526" BorderBrush="#8A2BE2" BorderThickness="1" CornerRadius="4" Padding="4">
                                                            <StackPanel IsItemsHost="True"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ContextMenu.Template>

                                                <ContextMenu.Resources>
                                                    <Style TargetType="MenuItem">
                                                        <Setter Property="FontSize" Value="14"/>
                                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                                        <Setter Property="Margin" Value="0,2"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="MenuItem">
                                                                    <Border x:Name="ItemBorder" Padding="15,8" Background="Transparent" CornerRadius="3">
                                                                        <ContentPresenter ContentSource="Header" HorizontalAlignment="Left"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsHighlighted" Value="True">
                                                                            <Setter TargetName="ItemBorder" Property="Background" Value="#3E3E42"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ContextMenu.Resources>

                                                <ContextMenu.Style>
                                                    <Style TargetType="ContextMenu">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHistoryItem}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContextMenu.Style>

                                                <MenuItem Header="Rename" Click="Rename_Click">
                                                    <MenuItem.Style>
                                                        <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsHistoryFile}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </MenuItem.Style>
                                                </MenuItem>

                                                <MenuItem Header="Delete" Click="Delete_Click">
                                                    <Setter Property="Foreground" Value="#FF6666"/>
                                                </MenuItem>

                                            </ContextMenu>
                                        </Border.ContextMenu>

                                        <ContentPresenter />
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#AA2A2232"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#AA2D2D30"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

        </Grid>
    </Border>
</Window>